{
    "name": "q",
    "private": true,
    "version": "0.3.0",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build:ext": "BUILD_TARGET=extension bun run vite build",
        "build:web": "BUILD_TARGET=web bun run vite build",
        "preview:web": "bun run build:web && vite preview",
        "preview": "vite preview",
        "release": "bun scripts/release.js",
        "prepare": "svelte-kit sync || echo ''",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "eslint . && prettier --check .",
        "format": "prettier --write ."
    },
    "devDependencies": {
        "@eslint/compat": "^1.4.1",
        "@eslint/js": "^9.39.2",
        "@sveltejs/adapter-static": "^3.0.10",
        "@sveltejs/kit": "^2.49.2",
        "@sveltejs/vite-plugin-svelte": "^5.1.1",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.1.18",
        "@vite-pwa/sveltekit": "^1.1.0",
        "bestzip": "^2.2.1",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.13.1",
        "globals": "^16.5.0",
        "prettier": "^3.7.4",
        "prettier-plugin-svelte": "^3.4.1",
        "svelte": "^5.46.0",
        "svelte-check": "^4.3.4",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.50.0",
        "vite": "^7.3.1"
    },
    "dependencies": {
        "@milkdown/crepe": "^7.17.3",
        "dexie": "^4.2.1",
        "sveltekit-adapter-chrome-extension": "^2.0.1"
    }
}
